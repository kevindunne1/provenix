{
  "name": "@provenix/api",
  "version": "0.1.0",
  "private": true,
  "description": "Provenix API server - cryptographic text provenance endpoints",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "generate-keypair": "tsx scripts/generate-keypair.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@noble/ed25519": "^2.1.0",
    "@noble/hashes": "^2.0.1",
    "@prisma/client": "^5.9.0",
    "@provenix/shared": "workspace:*",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "fastify": "^4.25.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "stripe": "^20.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.5",
    "prisma": "^5.9.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
